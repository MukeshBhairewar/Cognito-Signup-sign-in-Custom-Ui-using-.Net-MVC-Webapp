@using CustomuiCognito.Models  
@inject ICognitoService CognitoService

@if (User.Identity.IsAuthenticated)
{
    // User is authenticated
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a id="logout" class="nav-link">Logout</a>
            </li>
        </ul>
    </form>
}
else
{
    // User is not authenticated
    <ul class="navbar-nav">
        <li class="nav-item">
            <a id="login" class="nav-link" href="@Url.Action("Login", "Account")">Login</a>
        </li>
      @*   <li class="nav-item">
            <a id="register" class="nav-link" href="@Url.Action("Register", "Account")">Register</a>
        </li> *@
    </ul>
}

<script>
    document.getElementById('logout').addEventListener('click', function (e) {
        e.preventDefault();
        document.getElementById('logoutForm').submit();
    });
</script>

